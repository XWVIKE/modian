/* miniprogram/pages/home/home.wxss */

page {
  background-color: #fff;
  margin-top: 100px
}
.login{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.login-heade{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  position: relative;
  margin-top: 300rpx;
  left: 50%;
  transform: translateX(-50%);
}
.login-heade image{
  width: 200rpx;
  height: 200rpx;
}
.login-text{
  position: relative;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
}
.login-text view{
  font-size: 14pt;
  text-align: center;
  margin-bottom: 30rpx;

}
.login-text text{
  display: block;
  font-size: 12pt;
  color: #575757;
  text-align: center;
}
.login-but{
  display: block;
  position: relative;
  margin-top: 200rpx;
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
  color: #FFFFFF;
  font-size: 14pt;
  text-align: center;
}
.swiper-box {
  position: absolute;
  right: 20px;
  /* top: 100px; */
  background-color: rgb(235, 235, 235);
  width: 80vw;
  height: 25vh;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 5px 5px 5px rgb(207, 207, 207);
}

.hotEssay {
  position: absolute;
  right: 0;
  top: 41vh;
  width: 80vw;
  border-radius: 20px;
  padding-right: 20px;
  /* box-shadow: 5px 5px 5px rgb(207, 207, 207); */
  min-height: 100vh;
  overflow: hidden;
  /* background-color: rgb(197, 183, 183); */
}

.swiper-item {
  position: relative;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0);
}

.beforeImg {
  filter: blur(0px);
  position: absolute;
  border-radius: 20px;
  width: 100%;
  height: 100%;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  transition: all 500ms;
}

.swiper-text {
  position: absolute;
  width: 100%;
  text-align: center;
  line-height: 30px;
  font-size: 17px;
  height: 30px;
  background-color: rgba(255, 255, 255, 0.568);
  bottom: 0;
  left: 0;
}

.swiper-image {
  border-radius: 10px;
  filter: blur(2px);
  position: absolute;
  width: 70%;
  height: 80%;
  top: 50%;
  left: -50%;
  transform: translateY(-50%);
  transition: all 500ms;
}

.hotItem {
  width: 100%;
  height: 80px;
  border-radius: 20px;
  position: relative;
  margin-bottom: 10px;
  overflow: hidden;
  background-color: rgb(255, 255, 255);
  box-shadow: 5px 5px 5px rgb(207, 207, 207);
}

.article-nav{
  width: 100%;
  height: 100%;
  position: absolute;
}
.itemImg {
  position: absolute;
  top: 0;
  left: 0;
  width: 80px;
  height: 80px;
  /* overflow: hidden; */
  border-radius: 20px;
}

.itemImg-o {
  width: 100%;
  height: 100%;
}

.itemTitle {
  font-size: 12pt;
  font-weight: bold;
  color: #000;
  width: 55vw;
  max-height: 60px;
  position: absolute;
  top: 10px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  left: 90px;
}

.itemText {
  font-size: 12pt;
  width: 55vw;
  max-height: 30px;
  position: absolute;
  top: 35px;
  left: 90px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.leftFloat{
  padding-top: 100px;
  width: 15vw;
  height: 100vh;
  background-color: rgba(255, 255, 255, 0.336);
  position: fixed;
  top: 0;
  left: 0;
}
.leftFloat-box{
  width: 10vw;
  height: 10vw;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  overflow: hidden;
}
.leftFloat-img{
  width: 100%;
  height: 100%;
}
.leftFloat-me{
  top: 100px;
}
.leftFloat-follow{
  top: 160px;
}
.leftFloat-top{
  top: 90vh;
}
.leftFloat-add{
  top: 80vh;
}