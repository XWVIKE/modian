/* miniprogram/pages/aboutme/aboutme.wxss */
.aboutme-page{
  margin-top: 200rpx;
  position: relative;
}
.ava{
  width: 90vw;
  height: 200rpx;
  position: relative;
  border-radius: 0 100rpx 100rpx 0;
  background-color: #ffa7a7;
}
.avatar-box{
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 100rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 70rpx;
  display: inline-block
}

.avatar-box image{
  width: 100%;
  height: 100%;
}
.username{
  display: inline-block;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 240rpx;
  font-size: 12pt;
  font-weight: bold;
}
.artlist-box{
  width: 100vw;
  position: relative;
  margin-top: 30rpx;
}
.artList-itme{
  width: 90vw;
  height: 120rpx;
  position: relative;
  margin-bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 30rpx;
  box-shadow: 2rpx 5rpx 10rpx #b9b9b9;
}
.artList-itme navigator{
  width: 100%;
  height: 100%;
}
.list-title{
  font-size: 18pt;
  text-indent: 40rpx;
  margin-bottom: 30rpx;
}
.artList-itme image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 30rpx;
  display: inline-block;
}
.artList-itme view{
  display: inline-block;
  position: absolute;
  top: 10rpx;
  font-size: 12pt;
  font-weight: bold;
  left: 130rpx;
}
.artList-itme text{
  display: inline-block;
  width: 500rpx;
  height: 50rpx;
  position: absolute;
  font-size: 10pt;
  top: 60rpx;
  left: 130rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.aboutme-login{
  width: 150rpx;
  height: 60rpx;
  display: inline-block;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 240rpx;
  font-size: 12pt;
  /* font-weight: bold; */
}
.aboutme-login button{
  width: 100%;
  height: 100%;
  line-height: 60rpx;
  /* background-color: #71c43b; */
}