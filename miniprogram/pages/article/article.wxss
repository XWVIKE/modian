/* miniprogram/pages/article/article.wxss */
page{
  background-color: #fff;
  margin-top: 180rpx;
}
.art-box{
  width: 100%;
  position: relative;
}
.art-box-text{
  width: 100%;
  height: 100%;
  margin-bottom: 180rpx;
  position: relative;
}
.art-box-title{
  display: inline-block;
  width: 80vw;
  min-height: 70rpx;
  font-size: 17pt;
  position: relative;
  text-align: center;
  left: 50%;
  transform: translateX(-50%);
}
.art-box-ric{
  width: 90vw;
  height: 100%;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.art-box-like{
  width: 100vw;
  height: 80rpx;
  position: relative;
  
  
}
.art-box-like view{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  background-color: #fff;
  left: 50%;
  transform: translateX(-50%);
  top: -50%;
}
.art-box-like view image{
  width: 100%;
  height: 100%
}
.art-box-like::before{
  display: block;
  margin-top: 40rpx;
  content: '';
  width: 80vw;
  height: 1px;
  background-color: #e8e8e8;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}
.addMessage{
  width: 100vw;
  height: 150rpx;
  position: relative;
}
.input-mes{
  padding: 10rpx;
  width: 75vw;
  height: 150rpx;
  border-radius: 15rpx;
  position: absolute;
  top: 0;
  left: 20rpx;
  border: 1rpx solid #a8a8a8;
  box-shadow: 5rpx 5rpx 10rpx #e4e4e4;
}
.up-mes{
  width: 15vw;
  height: 100rpx;
  background-color: #0BB20C;
  text-align: center;
  line-height: 100rpx;
  box-shadow: 5rpx 5rpx 10rpx #e4e4e4;
  font-size: 12pt;
  color: #FFFFFF;
  font-weight: bold;
  border-radius: 15rpx;
  position: absolute;
  top: 0;
  right: 20rpx;
}
.message{
  width: 100vw;
  margin-top: 50rpx;
}
.message-item{
  width: 90vw;
  display: block;
  min-height: 100rpx;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #eaeaea;
}
.message-item-ava{
  border-radius: 80rpx;
  position: absolute;
  overflow: hidden;
  top: 0;
  left: 0;
  width: 80rpx;
  height: 80rpx;
  display: inline-block;
}
.message-item-ava image{
  width: 80rpx;
  height: 80rpx;
}
.message-item-user{
  font-size: 10pt;
  font-weight: bold;
  display: inline-block;
  position: absolute;
  top: 0;
  left: 100rpx;
}
.message-item-message{
  font-size: 10pt;
  display: inline-block;
  margin-left: 100rpx;
  margin-top: 50rpx;
  margin-bottom: 10rpx;
  max-width: 500rpx;
  /*background-color: #0BB20C;*/
}
