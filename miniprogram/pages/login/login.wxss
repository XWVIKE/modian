/* miniprogram/pages/login/login.wxss */
.login{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  /* z-index: ; */
}
.login-heade{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  position: relative;
  margin-top: 300rpx;
  left: 50%;
  transform: translateX(-50%);
}
.login-heade image{
  width: 200rpx;
  height: 200rpx;
}
.login-text{
  position: relative;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
}
.login-text view{
  font-size: 14pt;
  text-align: center;
  margin-bottom: 30rpx;

}
.login-text text{
  display: block;
  font-size: 12pt;
  color: #575757;
  text-align: center;
}
.login-but{
  display: block;
  position: relative;
  margin-top: 200rpx;
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 100rpx;
  color: #FFFFFF;
  font-size: 14pt;
  text-align: center;
}