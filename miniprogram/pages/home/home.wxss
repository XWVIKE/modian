/* miniprogram/pages/home/home.wxss */

page {
  background-color: #fff;
}

.swiper-box {
  position: absolute;
  right: 20px;
  top: 100px;
  background-color: rgb(235, 235, 235);
  width: 80vw;
  height: 25vh;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 5px 5px 5px rgb(207, 207, 207);
}

.swiper-item {
  position: relative;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0);
}

.beforeImg {
  filter: blur(0px);
  position: absolute;
  border-radius: 20px;
  width: 100%;
  height: 100%;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  transition: all 500ms;
}

.swiper-image {
  border-radius: 10px;
  filter: blur(2px);
  position: absolute;
  width: 70%;
  height: 80%;
  top: 50%;
  left: -50%;
  transform: translateY(-50%);
  transition: all  500ms;
}
